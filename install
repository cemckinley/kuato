#!/bin/bash

# install gbs

# Install remotely via one-liner:
# curl -L cemckinley.github.com/grunt-build-scaffold/install | bash

cd ~/bin
curl cemckinley.github.com/grunt-build-scaffold/gbs > gbs
chmod +x gbs

echo -e "\n\nYou're all set, dude\0041\n\nJust run 'gbs' to create a new project\0041\n"